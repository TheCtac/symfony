{%if pages>1 %}
	{% if page!=1%}
		<div class='page' onclick="$('{{block_}}').load('{{url_}}1 {{block_}}' );window.scrollTo(0,250);">1</div>
	{% endif %}
	{% if page-2>1 %}
		...
	{%endif%}
	{% if page-1>1 %}
		<div class='page' onclick="$('{{block_}}').load('{{url_}}{{page-1}} {{block_}}' );window.scrollTo(0,250);">{{page-1}}</div>
	{%endif%}
	<div class='this_page' onclick="$('{{block_}}').load('{{url_}}{{page}} {{block_}}' );window.scrollTo(0,250);">{{page}}</div>
	{% if page+1<pages %}
		<div class='page' onclick="$('{{block_}}').load('{{url_}}{{page+1}} {{block_}}' );window.scrollTo(0,250);">{{page+1}}</div>
	{%endif%}
	{% if page+2<pages %}
		...
	{%endif%}
	{% if page!=pages %} 
		<div class='page' onclick="$('{{block_}}').load('{{url_}}{{pages}} {{block_}}' );window.scrollTo(0,250);">{{pages}}</div>
	{%endif %}
{%endif%}	